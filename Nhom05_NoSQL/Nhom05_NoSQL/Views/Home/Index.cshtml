@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div id="demo" class="carousel slide" data-bs-ride="carousel">
    <!-- Indicators/dots -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active" style="border-radius:100%; width:10px; height:10px; margin:10px; "></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="1" style="border-radius:100%; width:10px; height:10px; margin:10px"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="2" style="border-radius:100%; width:10px; height:10px; margin:10px"></button>
    </div>
    <!-- The slideshow/carousel -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Public/images/QC1.png" alt="Los Angeles" class="d-block" style="width:100%;height:530px">
        </div>
        <div class="carousel-item">
            <img src="~/Public/images/QC2.jpg" alt="Chicago" class="d-block" style="width:100%; height:530px">
        </div>
        <div class="carousel-item">
            <img src="~/Public/images/QC6.png" alt="New York" class="d-block" style="width:100%;height:530px">
        </div>
    </div>
    <!-- Left and right controls/icons -->
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

